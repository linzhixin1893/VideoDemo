<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="160dp">

    <ImageView
            android:id="@+id/poster_iv"
            android:layout_width="112dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            tools:background="@drawable/ic_movie_default"
            android:focusable="false"
            android:gravity="center"
            android:focusableInTouchMode="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"/>


    <TextView android:padding="3dp"
              android:focusable="false"
              android:lines="3"
              android:gravity="bottom|center"
              android:textColor="@color/white"
              android:focusableInTouchMode="false"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:textSize="18sp"
              android:id="@+id/name_tv"
              android:text="@string/add"
              android:layout_alignParentBottom="true"
              android:layout_alignStart="@+id/poster_iv"
              android:layout_alignEnd="@+id/poster_iv"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectCb"
            android:layout_margin="5dp"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/cb_bg"
            android:button="@null"
            android:focusableInTouchMode="false"
            android:layout_alignTop="@+id/poster_iv" android:layout_alignEnd="@+id/poster_iv"/>


</RelativeLayout>